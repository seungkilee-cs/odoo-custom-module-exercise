<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="purchase_order_form_inherit_sale_purchase_link"
        model="ir.ui.view"
    >
        <field
            name="name"
        >purchase.order.form.inherit.sale_purchase_link</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">

            <!-- Ensure field is in the view (for invisible evaluation + debugging) -->
            <xpath expr="//sheet" position="inside">
                <field name="sale_order_id" invisible="1" />
            </xpath>

            <!-- Smart button: open Sales Order -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_view_sale_order"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-external-link"
                    invisible="not sale_order_id"
                >
                    <div class="o_stat_info">
                        <span class="o_stat_text">Sales Order</span>
                    </div>
                </button>
            </xpath>

        </field>
    </record>
</odoo>
